{
  "name": "bakery/webapp",
  "description": "Bakery website — учебный проект на PHP Slim 4",
  "keywords": ["php", "slim", "bakery", "rest", "webapp"],
  "homepage": "https://github.com/MyXaBro/bakery",
  "license": "proprietary",
  "type": "project",

  "authors": [
    {
      "name": "Владислав Дмитриев",
      "email": "dmitriev3.vyu@edu.spbstu.ru",
      "role": "Developer"
    }
  ],

  "require": {
    "php": "^8.4",
    "ext-pdo": "*",
    "monolog/monolog": "^3.7",
    "php-di/php-di": "^7.1",
    "phpmailer/phpmailer": "^6.9",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.12",
    "vlucas/phpdotenv": "^5.6"
  },

  "require-dev": {
    "symfony/var-dumper": "^7.2",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.65"
  },

  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },

  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },

  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
